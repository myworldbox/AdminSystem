@model IEnumerable<AdminSystem.Models.vw_CustomerSummary>

<h2>客戶摘要</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>客戶名稱</th>
            <th>聯絡人數量</th>
            <th>銀行帳戶數量</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.客戶名稱)</td>
                <td>@Html.DisplayFor(modelItem => item.聯絡人數量)</td>
                <td>@Html.DisplayFor(modelItem => item.銀行帳戶數量)</td>
            </tr>
        }
    </tbody>
</table>