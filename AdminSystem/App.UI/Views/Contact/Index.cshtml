@using AdminSystem.Application.ViewModels
@using System.Text.Json
@using AdminSystem.Domain.Entities
@using AdminSystem.Application.Dtos
@using static AdminSystem.Domain.Enums

@model PagedResultDto<ContactViewModel>

@{
    ViewData["Title"] = "客戶聯絡人管理";

    var currentPage = Model.SearchDto.Page;
    var pageSize = Model.SearchDto.PageSize;
    var totalRecords = Model.TotalRecords;
    var totalPages = Model.TotalPages;

    var fromRecord = totalRecords == 0 ? 0 : (currentPage - 1) * pageSize + 1;
    var toRecord = totalRecords == 0 ? 0 : Math.Min(currentPage * pageSize, totalRecords);

    // 排序切換
    Order nextOrder = Model.SearchDto.Order == Order.asc ? Order.desc : Order.asc;

    // 基礎 route 參數
    var baseRoute = new Dictionary<string, string>
    {
        { "SearchTerm", Model.SearchDto.SearchTerm ?? "" },
        { "OrderName", "" },           // 會被覆蓋
        { "Order", nextOrder.ToString() },
        { "Page", "1" }
    };
}

<div class="card shadow-sm mb-5">
    <h4 class="card-header fw-bold text-white" style="background-color: #337ab7;">
        客戶聯絡人管理
    </h4>
    <div class="card-body">

        <!-- 搜尋 & 按鈕 -->
        <form asp-action="Index" method="get" class="mb-4">
            <div class="row g-3 align-items-end">
                <div class="col-lg-6 col-md-8">
                    <label class="form-label">搜尋關鍵字</label>
                    <input type="text" name="SearchTerm" value="@Model.SearchDto.SearchTerm"
                           class="form-control" placeholder="姓名、職稱、Email、手機、電話..." />
                </div>
                <div class="col-lg-6 col-md-4 text-md-end">
                    <button type="submit" class="btn btn-primary">搜尋</button>
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2">清除</a>
                    <a asp-action="Create" class="btn btn-success ms-2">
                        新增聯絡人
                    </a>
                </div>
            </div>
            <input type="hidden" name="OrderName" value="@Model.SearchDto.OrderName" />
            <input type="hidden" name="Order" value="@Model.SearchDto.Order" />
        </form>

        <!-- 匯出 Excel -->
        <form asp-action="Export" method="get" class="d-inline mb-3">
            @foreach (var key in Context.Request.Query.Keys)
            {
                @foreach (var val in Context.Request.Query[key])
                {
                    <input type="hidden" name="@key" value="@val" />
                }
            }
            <button type="submit" class="btn btn-success">
                匯出 Excel
            </button>
        </form>

        <!-- 資料統計 -->
        <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
            <small class="text-muted">
                顯示 <strong>@(fromRecord != toRecord ? $"{fromRecord} – {toRecord}" : fromRecord)</strong> 
                筆，共 <strong>@totalRecords</strong> 筆
            </small>
        </div>

        <!-- 表格 -->
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>
                            <a asp-all-route-data="@(new Dictionary<string, string>(baseRoute) { ["OrderName"] = "職稱" })">
                                職稱
                                @if (Model.SearchDto.OrderName == "職稱")
                                {
                                    <i class="fas fa-sort-@(Model.SearchDto.Order == Order.asc ? "up" : "down")"></i>
                                }
                            </a>
                        </th>
                        <th>
                            <a asp-all-route-data="@(new Dictionary<string, string>(baseRoute) { ["OrderName"] = "姓名" })">
                                姓名
                                @if (Model.SearchDto.OrderName == "姓名") { <i class="fas fa-sort-@(Model.SearchDto.Order == Order.asc ? "up" : "down")"></i> }
                            </a>
                        </th>
                        <th>
                            <a asp-all-route-data="@(new Dictionary<string, string>(baseRoute) { ["OrderName"] = "Email" })">
                                Email
                                @if (Model.SearchDto.OrderName == "Email") { <i class="fas fa-sort-@(Model.SearchDto.Order == Order.asc ? "up" : "down")"></i> }
                            </a>
                        </th>
                        <th>
                            <a asp-all-route-data="@(new Dictionary<string, string>(baseRoute) { ["OrderName"] = "手機" })">
                                手機
                                @if (Model.SearchDto.OrderName == "手機") { <i class="fas fa-sort-@(Model.SearchDto.Order == Order.asc ? "up" : "down")"></i> }
                            </a>
                        </th>
                        <th>
                            <a asp-all-route-data="@(new Dictionary<string, string>(baseRoute) { ["OrderName"] = "電話" })">
                                電話
                                @if (Model.SearchDto.OrderName == "電話") { <i class="fas fa-sort-@(Model.SearchDto.Order == Order.asc ? "up" : "down")"></i> }
                            </a>
                        </th>
                        <th class="text-center">操作</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items.Any())
                    {
                        foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.職稱</td>
                                <td>@item.姓名</td>
                                <td>@item.Email</td>
                                <td>@item.手機</td>
                                <td>@item.電話</td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark">詳細</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">編輯</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"
                                       onclick="return confirm('確定要刪除聯絡人「@item.姓名」嗎？');">刪除</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">尚未有任何聯絡人資料</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @await Html.PartialAsync("_Pagination", Model)

    </div>
</div>