@using AdminSystem.Application.Dtos
@using AdminSystem.Domain.Entities
@using static AdminSystem.Domain.Enums
@using System.ComponentModel
@using AutoMapper.Configuration.Annotations

@model PagedResultDto<ContactViewModel>

@{
    var search = Model.SearchDto;
    var nextOrder = (search.Order == Order.asc ? Order.desc : Order.asc).ToString();

    dynamic SortLink(string column) => new Dictionary<string, string>
    {
        ["SearchTerm"] = search.SearchTerm ?? "",
        ["OrderName"] = column,
        ["Order"] = nextOrder,
        ["Page"] = "1"
    };

    var props = typeof(ContactViewModel)
    .GetProperties()
    .Where(p => !Attribute.IsDefined(p, typeof(IgnoreAttribute)))
    .ToArray();
}

<div class="card shadow-sm mb-5">
    <h4 class="card-header fw-bold text-white" style="background: #337ab7;">@ViewData["Title"]</h4>
    <div class="card-body">

        <!-- Search Form -->
        <form asp-action="Index" method="get" class="mb-4">
            <div class="row g-3 align-items-end">
                <div class="col-lg-8 col-md-7">
                    <label class="form-label">搜尋關鍵字</label>
                    <input name="SearchTerm" value="@search.SearchTerm" class="form-control" />
                </div>
                <div class="col-lg-4 col-md-5 text-md-end">
                    <button type="submit" class="btn btn-primary">搜尋</button>
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2">清除</a>
                    <a asp-action="Create" class="btn btn-success ms-2">新增客戶</a>
                </div>
            </div>
            <input type="hidden" name="OrderName" value="@search.OrderName" />
            <input type="hidden" name="Order" value="@search.Order" />
        </form>

        <!-- Export + Stats -->
        <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-3">
            <div>
                <form asp-action="Export" method="get" class="d-inline">
                    @foreach (var key in Context.Request.Query.Keys)
                    {
                        foreach (var val in Context.Request.Query[key])
                        {
                            <input type="hidden" name="@key" value="@val" />
                        }
                    }
                    <button type="submit" class="btn btn-success btn-sm">匯出 Excel</button>
                </form>
            </div>

            <small class="text-muted">
                顯示 <strong>
                    @(Model.TotalRecords == 0 ? 0 : (search.Page - 1) * search.PageSize + 1)
                    – @(Math.Min(search.Page * search.PageSize, Model.TotalRecords))
                </strong> 筆，
                共 <strong>@Model.TotalRecords</strong> 筆記錄
            </small>
        </div>

        <!-- Responsive Table -->
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        @foreach (var prop in props)
                        {
                            var displayName = prop.GetCustomAttributes(typeof(DisplayNameAttribute), false)
                            .Cast<DisplayNameAttribute>()
                            .FirstOrDefault()?.DisplayName ?? prop.Name;

                            <th>
                                <a asp-all-route-data="@SortLink(prop.Name)">
                                    @displayName
                                    @(search.OrderName == prop.Name ? Html.PartialAsync("_SortIcon").Result : null)
                                </a>
                            </th>
                        }
                        <th class="text-center">操作</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items.Any())
                    {
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                @foreach (var prop in props)
                                {
                                    var value = prop.GetValue(item);
                                    <td>@value</td>
                                }
                                <td class="text-center text-nowrap">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark">詳細</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">編輯</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"
                                       onclick="return confirm('確定要刪除「@item.Id」嗎？\n此動作無法復原。')">刪除</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="@(props.Length + 1)" class="text-center py-5 text-muted">尚未有任何客戶資料</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @await Html.PartialAsync("_Pagination", Model)
    </div>
</div>